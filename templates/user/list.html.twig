{% extends 'base.html.twig' %}

{% block body %}
    <p>
        <a class="btn btn-default" href="{{ path('user_add') }}"><i class="fa fa-plus" aria-hidden="true"></i> Add User</a>
    </p>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    {{ user.email }}
                </td>
                <td>
                    <a href="{{ path('user_edit', {'userId': user.id}) }}" class="btn btn-secondary">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}